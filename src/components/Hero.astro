---
interface Props {
  title: string;
  subtitle?: string;
  height?: 'small' | 'medium' | 'large';
}

const { 
  title, 
  subtitle, 
  height = 'medium' 
} = Astro.props;

const heightClasses = {
  small: 'h-64',
  medium: 'h-96',
  large: 'h-screen'
};
---

<section class={`relative ${heightClasses[height]} flex items-center justify-center bg-gradient-to-b from-river-blue to-cypress-green text-white`}>
  <!-- Background image overlay -->
  <div class="absolute inset-0 bg-black opacity-30"></div>
  
  <!-- Content -->
  <div class="relative z-10 text-center px-4 max-w-4xl mx-auto">
    <h1 class="text-4xl md:text-6xl font-heading font-bold mb-4 drop-shadow-lg">
      {title}
    </h1>
    {subtitle && (
      <p class="text-xl md:text-2xl text-gray-200 drop-shadow-md">
        {subtitle}
      </p>
    )}
  </div>
</section>
