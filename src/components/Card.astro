---
interface Props {
  title: string;
  description?: string;
  href?: string;
  image?: string;
}

const { title, description, href, image } = Astro.props;
---

<article class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow">
  {image && (
    <img 
      src={image} 
      alt={title}
      class="w-full h-48 object-cover"
      loading="lazy"
    />
  )}
  <div class="p-6">
    {href ? (
      <a href={href} class="block">
        <h3 class="text-2xl font-heading font-bold mb-2 text-river-blue hover:text-cypress-green transition-colors">
          {title}
        </h3>
      </a>
    ) : (
      <h3 class="text-2xl font-heading font-bold mb-2 text-river-blue">
        {title}
      </h3>
    )}
    {description && (
      <p class="text-gray-700 leading-relaxed">
        {description}
      </p>
    )}
    <slot />
  </div>
</article>
