---
const currentPath = Astro.url.pathname;
---

<header class="bg-river-blue text-white shadow-lg">
  <nav class="container mx-auto px-4 py-4">
    <div class="flex flex-wrap items-center justify-between">
      <a href="/" class="text-2xl font-heading font-bold hover:text-sandbar-tan transition-colors">
        The Lumber River
      </a>
      <button
        id="mobile-menu-button"
        class="md:hidden text-white hover:text-sandbar-tan focus:outline-none"
        aria-label="Toggle navigation menu"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>
      <ul id="mobile-menu" class="hidden md:flex md:space-x-6 w-full md:w-auto mt-4 md:mt-0">
        <li><a href="/" class={`block py-2 hover:text-sandbar-tan transition-colors ${currentPath === '/' ? 'text-sandbar-tan' : ''}`}>Home</a></li>
        <li><a href="/about" class={`block py-2 hover:text-sandbar-tan transition-colors ${currentPath === '/about' ? 'text-sandbar-tan' : ''}`}>About</a></li>
        <li><a href="/blog" class={`block py-2 hover:text-sandbar-tan transition-colors ${currentPath.startsWith('/blog') ? 'text-sandbar-tan' : ''}`}>Blog</a></li>
        <li><a href="/guide" class={`block py-2 hover:text-sandbar-tan transition-colors ${currentPath === '/guide' ? 'text-sandbar-tan' : ''}`}>Guide</a></li>
        <li><a href="/upcoming" class={`block py-2 hover:text-sandbar-tan transition-colors ${currentPath === '/upcoming' ? 'text-sandbar-tan' : ''}`}>Events</a></li>
        <li><a href="/contact" class={`block py-2 hover:text-sandbar-tan transition-colors ${currentPath === '/contact' ? 'text-sandbar-tan' : ''}`}>Contact</a></li>
      </ul>
    </div>
  </nav>
</header>

<script>
  // Mobile menu toggle
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');

  menuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
